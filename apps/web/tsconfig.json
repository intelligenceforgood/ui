{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@i4g/ui-kit": ["../../packages/ui-kit/src/index.ts"],
      "@i4g/ui-kit/*": ["../../packages/ui-kit/src/*"],
      "@i4g/sdk": ["../../packages/sdk/src/index.ts"],
      "@i4g/sdk/*": ["../../packages/sdk/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/ui-kit/src/**/*.ts",
    "../../packages/ui-kit/src/**/*.tsx",
    "../../packages/sdk/src/**/*.ts"
  ],
  "exclude": ["node_modules", "vitest.config.ts"]
}
