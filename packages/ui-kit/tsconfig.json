{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "types": ["@testing-library/jest-dom", "vitest/globals"],
    "paths": {
      "react": ["../../node_modules/@types/react/index"],
      "react/jsx-runtime": ["../../node_modules/@types/react/jsx-runtime"],
